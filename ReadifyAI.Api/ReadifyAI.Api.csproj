<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <InvariantGlobalization>true</InvariantGlobalization>
        <PublishAot>true</PublishAot>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
    </PropertyGroup>

    <ItemGroup>
      <Content Include="..\.dockerignore">
        <Link>.dockerignore</Link>
      </Content>
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Readify.ServiceDefaults\Readify.ServiceDefaults.csproj" />
      <ProjectReference Include="..\ReadifyAI.Application\ReadifyAI.Application.csproj" />
      <ProjectReference Include="..\ReadifyAI.Infrastructure\ReadifyAI.Infrastructure.csproj" />
    </ItemGroup>

</Project>
